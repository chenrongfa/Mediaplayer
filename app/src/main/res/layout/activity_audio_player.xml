<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_audio"
    tools:context="yy.chen.mediaplay.activity.AudioPlayer">
   <RelativeLayout
       android:id="@+id/rl_top"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/ll_audio"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:background="@drawable/bg_player_top_control"
           android:layout_height="wrap_content"
           >
           <Button
               android:id="@+id/btn_voice"
               android:background="@drawable/btn_seletor"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <SeekBar
               android:maxHeight="8dp"
               android:layout_gravity="center_vertical"
               android:id="@+id/sb_voice"
               android:layout_weight="1"
               android:thumb="@drawable/progress_thumb"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <Button
               android:id="@+id/btn_everything"
               android:background="@drawable/btn_seletor1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <!--<ImageView
           android:background="@drawable/audio_list"
           android:id="@+id/iv_src"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/now_playing_matrix_01"/>-->
       <yy.chen.mediaplay.view.BaseVisualizerView
           android:background="@drawable/audio_list"
           android:id="@+id/iv_src"
           android:layout_below="@+id/ll_audio"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="100dp"
          />


       <TextView

           android:id="@+id/tv_song"
           android:layout_alignBottom="@+id/iv_src"
           android:text="吻别"
           android:layout_centerHorizontal="true"
           android:textSize="30sp"
           android:textColor="#555555"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tv_author"
           android:layout_below="@+id/tv_song"
           android:text="陈荣发"
           android:layout_centerHorizontal="true"
           android:textSize="20sp"
           android:textColor="#555555"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_container"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_time"
            android:text="00:00/20:40"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:maxHeight="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/sb_play"
            android:layout_weight="1"
            android:thumb="@drawable/seek_thumb"
            android:layout_width="match_parent"
            android:progressDrawable="@drawable/test"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_audio_mode"
                android:layout_weight="1"
                android:background="@drawable/btn_mode_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_pre"
                android:layout_weight="1"
                android:background="@drawable/btn_pre_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_pause"
                android:background="@drawable/btn_pause_selector"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_next"
                android:background="@drawable/btn_next_selector"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_lyrc"
                android:background="@drawable/btn_lyc_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <yy.chen.mediaplay.view.LyricView
        android:id="@+id/tv_lyric"
        android:layout_below="@+id/rl_top"
        android:layout_above="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></yy.chen.mediaplay.view.LyricView>
</RelativeLayout>
