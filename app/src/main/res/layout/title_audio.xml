<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
     <EditText
         android:id="@+id/tv_audiosearch"
         android:layout_marginLeft="10dp"
         android:drawablePadding="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:hint="全文搜索"
         android:clickable="true"
         android:textColor="@drawable/tv_search_font"
         android:drawableLeft="@drawable/tv_search_drawable"
         android:textSize="10sp"
         android:background="@drawable/tv_search_bg"
         />
     <ImageView
         android:id="@+id/iv_audiosearch"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/voice_empty"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_gravity="center"
         />
     <Button
         android:layout_marginRight="8dp"
         android:text="搜索"
         android:id="@+id/btn_sure_search"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
 </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_titlelv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb_audiopb"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_searchdata"
            android:text="没有发现数据"
            android:layout_centerInParent="true"
            android:layout_below="@+id/pb_audiopb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>